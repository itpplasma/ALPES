\ProvidesPackage{titlepage}

\RequirePackage{graphicx}
\RequirePackage{geometry}

% Define the title page command
\newcommand{\mytitlepage}{
    \begin{titlepage}
        \begin{center}
            % SVG Logo
            \begin{minipage}{0.49\textwidth}
                \centering
                \includegraphics[width=0.6\textwidth]{styles/tu_graz_log.pdf}
            \end{minipage}
            \hfill
            \begin{minipage}{0.49\textwidth}
                \centering
                \includegraphics[width=0.5\textwidth]{styles/tu_munich_logo_blue.png}
            \end{minipage}
            \hfill
            \vspace*{1cm}
            \begin{minipage}{0.49\textwidth}
                \centering
                \includegraphics[width=0.8\textwidth]{styles/proxima_logo.png}
            \end{minipage}

            % Vertical space
            \vspace{5cm}

            % Title
            {\LARGE \textbf{\mytitle}}

            % Subtitle
            \vspace{0.5cm}
            {\Large \mysubtitle}

            % Authors
            \vspace{2cm}
            \textsc{By:\\ \myauthors}

            % Supervisor
            \vspace{2cm}
            \textsc{Supervised by:\\
                \mysupervisors}

            % Date
            \vfill
            \textsc{\mydate}
        \end{center}
    \end{titlepage}
}


% Command to set up the title page with correct page numbering
% Define the setup title page command
\newcommand{\setupTitlePage}{
    \pagenumbering{arabic}
    \setcounter{page}{1}
    \mytitlepage
    \clearpage
    \setcounter{page}{2}
}

\endinput
