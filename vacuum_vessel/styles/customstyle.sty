% Custom commands for title page
\newcommand{\reporttitle}[1]{\newcommand{\mytitle}{#1}}
\newcommand{\reportsubtitle}[1]{\newcommand{\mysubtitle}{#1}}
\newcommand{\reportauthors}[1]{\newcommand{\myauthors}{#1}}
\newcommand{\reportsupervisors}[1]{\newcommand{\mysupervisors}{#1}}
\newcommand{\reportdate}[1]{\newcommand{\mydate}{#1}}

% Page style and headers/footers
\fancypagestyle{customstyle}{
    \fancyhf{}
    \fancyhead[L]{\mytitle}
    \fancyhead[C]{\mysubtitle}
    \fancyhead[R]{\nouppercase{\leftmark}}

    \fancyfoot[C]{\thepage\ / \pageref{LastPage} \vspace{10pt}}
    \renewcommand{\headrulewidth}{0.4pt}
    \renewcommand{\footrulewidth}{0.4pt}

    \ifdefined\chapter
        \renewcommand{\chaptermark}[1]{\markboth{##1}{}}

    \fi
}

\fancypagestyle{plain}{
    \fancyhf{} % Clear header and footer
    \fancyfoot[C]{\thepage\ / \pageref{LastPage}} % Page number in center
    \renewcommand{\headrulewidth}{0pt} % No header rule
    \renewcommand{\footrulewidth}{0.4pt} % Footer rule
}


